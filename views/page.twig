{% extends "layout.twig" %}

{% block content %}
    <div class="page">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 color-primary">
                <h1>{{ page['title'] }}</h1>
                <hr>
                {{ page['text']|raw }}
                <hr>
                <p class="color-secondary text-center">Last updated: {{ page['updated_at'].format('d M, Y') }}</p>
            </div>
        </div>
    </div>
{% endblock %}